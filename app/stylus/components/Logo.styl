[data-component='Logo'] {
  position: absolute;
  z-index: 1000;
  top: 50px;
  left: 500px;
  /*  height: calc(100% - 50px); */
  height: 300px;
  width: 300px;
  /* overflow-y: scroll; */

	> div {
		width: 100%;
		padding: 4px 8px;
		resize: none;
		outline: none;
		background-color: rgba(#243B55, 1);
    > div {
      color: #cccccc;
    }
    p {
      color: #ffffff;
    }
		font-family: inherit;
		font-size: 13px;
		font-weight: 400;
		line-height: 22px;
		border: none;
	}
}

.App-logo {
  height: 10vmin;
  pointer-events: none;
}

@media (prefers-reduced-motion: no-preference) {
  .App-logo {
    animation: App-logo-spin infinite 20s linear;
  }
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
